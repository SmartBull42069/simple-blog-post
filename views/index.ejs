<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
        

    <main>
        <section>
            <div class="container text-center">
                <div class="row align-items-center justify-content-center">
                    <div class="col-4">
                        <div class="mb-3 my-4">
                            <form action="/submit" method="post" id="submission">
                                <label for="exampleFormControlInput1" class="form-label">Title</label>
                                <input type="text" class="form-control form-control border border-dark border-3"
                                    id="exampleFormControlInput1" name="title" placeholder="Something eye catching"
                                    required>
                                <div class="mb-3">
                                    <label for="exampleFormControlTextarea1" class="form-label">Content</label>
                                    <textarea class="form-control border border-dark border-3"
                                        id="exampleFormControlTextarea1" rows="3" name="textArea" required></textarea>
                            </form>
                            <button type="submit" class="btn btn-dark my-4 btn-lg" form="submission" value="button"
                                name="btn">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container text-center">
                <div class="row align-items-center justify-content-center">
                    <div class="col-12">
                        <div class="mb-3 my-4">

                            <% if (list.length>0) { %>
                                <% for( post in list ) { %>
                                    <% for( title in list[post] ) { %>
                                        <div class="post-<%= post %>-post my-4 border border-dark rounded">
                                            <h1>
                                                <%= title %>
                                            </h1>
                                            <p>
                                                <%= list[post][title] %>
                                            </p>
                                            <form action="/delete" method="post" style="display: inline-block;">
                                                <button type="submit" class="btn btn-dark border-4 border-dark my-1"
                                                    value="<%= post %>" name="delete">Delete</button>
                                            </form>
                                                <button type="submit" class="post-<%= post %> post btn btn-dark border-4 border-dark my-1"
                                                    value="<%= post %>" name="edit">edit</button>
                                        </div>


                                        <div class="post-<%= post %>-change post-<%= post %>-cancel hidden">
                                            <form action="/change" method="post" id="submission">
                                                <label for="exampleFormControlInput1" class="form-label">Title</label>
                                                <input type="text"
                                                    class="form-control form-control border border-warning border-3"
                                                    id="exampleFormControlInput1" name="title"
                                                    placeholder="Something eye catching" required value="<%= title %>">

                                                <label for="exampleFormControlTextarea1" class="form-label">Post</label>
                                                <textarea class="form-control border border-warning border-3"
                                                    id="exampleFormControlTextarea1" rows="3" name="textArea"
                                                    required><%= list[post][title] %></textarea>

                                                <button type="submit" class="btn btn-dark border-4 border-dark my-1"
                                                    value="<%= post %>" name="save">save</button>
                                            </form>
                                            <form action="/cancel" method="post">
                                                <button type="submit" class="post-<%= post %> change btn btn-dark border-4 border-dark my-1"
                                                    value="cancel" name="<%= post %>">cancel</button>
                                            </form>
                                                
                                        </div>

                                        <% } %>
                                            <% } %>
                                                <% } %>


                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="index.js"></script>
    
</body>
</html>